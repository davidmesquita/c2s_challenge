<div class="container">
  <h2>Login</h2>
  
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true, autofocus: true, placeholder: "seu@email.com" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, required: true, placeholder: "Mínimo 6 caracteres" %>
    </div>
    
    <%= f.submit "Entrar", class: "btn" %>
  <% end %>
  
  <div class="link-text">
    Não tem uma conta? <%= link_to "Criar conta", signup_path %>
  </div>
</div>
